#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x

source "$(dirname "$0")/common/functions"

IFS=''
while read -r log ; do
  if [ "$DK_BASHPID" = "$DK_PPID"  ] || [ "$1" = "err" ]; then
    exec "$@ $log"
  fi
done

if [ "$DK_BASHPID" = "$DK_PPID"  ]; then
  exec "system *****end*****"
fi